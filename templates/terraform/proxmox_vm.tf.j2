terraform {
  required_version = ">= 1.0.0"

  required_providers {
    proxmox = {
      source  = "Telmate/proxmox"
      version = "~> 3.0"
    }
  }
}

provider "proxmox" {
  pm_api_url          = "{{ proxmox_endpoint }}"
  pm_api_token_id     = "{{ proxmox_token_id }}"
  pm_api_token_secret = "{{ proxmox_token_secret }}"
  pm_tls_insecure     = true
}

resource "proxmox_vm_qemu" "this" {
  name        = "{{ vm_name }}"
  target_node = "{{ node }}"
  cores       = {{ cores }}
  memory      = {{ memory_mb }}

  disk {
    size    = "{{ disk_gb }}G"
    storage = "{{ storage }}"
  }

  iso = "{{ iso_image }}"
}
