output "vpc_id" {
  value       = var.enable_vpc ? aws_vpc.this[0].id : null
  description = "ID della VPC (se creata)."
}

output "ec2_instance_id" {
  value       = var.enable_ec2 ? aws_instance.app[0].id : null
  description = "ID dell'istanza EC2 (se creata)."
}

output "s3_bucket_name" {
  value       = var.enable_s3 ? var.s3_bucket_name : null
  description = "Nome del bucket S3 (se creato)."
}
